{
  "name": "gateway-poc-dev",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "go-dev",
  "workspaceFolder": "/src",
  "shutdownAction": "stopCompose",
  "forwardPorts": [4666, 8001],
  "portsAttributes": {
    "4666": {
      "label": "LocalStack",
      "onAutoForward": "notify"
    },
    "8001": {
      "label": "DynamoDB Admin",
      "onAutoForward": "notify"
    }
  },
  "remoteEnv": {
    "IS_DEV_CONTAINER": "true",
    "AWS_ENDPOINT_URL": "http://localstack:4566",
    "AWS_DEFAULT_REGION": "${containerEnv:AWS_DEFAULT_REGION:-us-east-1}",
    "AWS_ACCESS_KEY_ID": "${containerEnv:AWS_ACCESS_KEY_ID:-test}",
    "AWS_SECRET_ACCESS_KEY": "${containerEnv:AWS_SECRET_ACCESS_KEY:-test}",
    "DOCKER_DEFAULT_PLATFORM": "linux/arm64"
  },
  "postCreateCommand": "go version",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "ms-azuretools.vscode-docker",
        "MS-CEINTL.vscode-language-pack-ja",
        "streetsidesoftware.code-spell-checker",
        "esbenp.prettier-vscode"
      ]
    },
    "settings": {
      "cSpell.language": "en",
      "cSpell.words": [],
      "editor.renderWhitespace": "all"
    }
  }
}
